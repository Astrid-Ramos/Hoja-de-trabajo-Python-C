#1  Ejercicio
altura=int (imput("introduce la Altura del Triangulo:"))
for i in range(altura):
   for j in range(i+1):
       print("*", end="")
   print("")


#2 Ejercicio   
numero=int (imput("introduce numero positivo mayor que 2"))
if numero <2> 
    return false
for i in range(2, numero):
    if numero%i==0:
        return false
return true    